<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/color_FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="@color/gray_normal" />-->

    <!--<LinearLayout-->
    <!--android:id="@+id/rl_bottom"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="#aaffffff"-->
    <!--android:gravity="center_vertical"-->
    <!--android:orientation="horizontal"-->
    <!--android:paddingTop="4dp">-->

    <Button
        android:id="@+id/btn_set_mode_voice"
        android:layout_width="@dimen/dimen_28dp"
        android:layout_height="@dimen/dimen_28dp"
        android:layout_marginLeft="6dp"
        android:background="@mipmap/voice_input"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_set_mode_keyboard"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="6dp"
        android:background="@mipmap/keyboard"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/btn_press_to_speak"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:background="@drawable/ease_chat_press_speak_tv_selector"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/speak_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/button_pushtotalk"
            android:textColor="#666666"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/edittext_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_sendmessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dip"
            android:background="@drawable/menu_edit_color_f5f6fa_corner_4dp"
            android:imeOptions="actionSend"
            android:maxLines="3"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:textColor="@color/color_0F1826"
            android:textSize="16sp"
            tools:text="测试" />

        <RelativeLayout
            android:id="@+id/rl_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_face_normal"
                android:layout_width="@dimen/dimen_28dp"
                android:layout_height="@dimen/dimen_28dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/expression"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_face_checked"
                android:layout_width="@dimen/dimen_28dp"
                android:layout_height="@dimen/dimen_28dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/keyboard"
                android:visibility="invisible" />

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_more"
        android:layout_width="@dimen/dimen_28dp"
        android:layout_height="@dimen/dimen_28dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/add" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/ease_chat_send_btn_selector"
        android:text="@string/button_send"
        android:textColor="#666666"
        android:textSize="16sp"
        android:visibility="gone" />
    <!--</LinearLayout>-->

</LinearLayout>